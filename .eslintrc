{
  "extends": [
    "airbnb",
    "plugin:react-hooks/recommended"
  ],
  "rules": {
    "max-len": [
      "error",
      {
        "code": 120,
        "ignoreComments": true
      }
    ],
    "spaced-comment": [
      "error",
      "always",
      {
        "line": {
          "markers": ["/"]
        }
      }
    ],
    "import/prefer-default-export": "off"
  }
}
